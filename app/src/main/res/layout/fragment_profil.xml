<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfilFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/ivusername"
            android:layout_width="179dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ivprofile"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="170dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:text="Username"
            tools:text="Full Name" />

        <TextView
            android:id="@+id/ivemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ininstitutename"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:text="Email" />

        <TextView
            android:id="@+id/ivphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivemail"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:text="Phone Number" />

        <TextView
            android:id="@+id/ivaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivphone"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@android:drawable/ic_menu_compass"
            android:text="Adress"
            tools:text="Adress" />

        <TextView
            android:id="@+id/ininstitutename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivusername"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:text="Institut Name"
            tools:text="Institut Name / Username" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/ivaddress"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="165dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="152dp"
            android:text="UPDATE" />


    </RelativeLayout>


</FrameLayout>