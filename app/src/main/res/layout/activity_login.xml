<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F5"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="262dp"
        android:layout_height="436dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-126dp"
        android:layout_marginTop="513dp"
        android:layout_marginEnd="306dp"
        android:layout_marginBottom="-154dp"
        app:srcCompat="@drawable/assest" />

    <Button
        android:id="@+id/btKonekte"
        android:layout_width="180dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="506dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#F9A826"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius="30dp" />

    <TextView
        android:id="@+id/tvenskri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="52dp"
        android:layout_toEndOf="@+id/textView"
        android:text="Sign Up"
        android:textColor="@color/Orange"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="337dp"
        android:layout_marginBottom="50dp"
        android:text="Don't Have an Account?"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="213dp"
        android:text="LOGIN "
        android:textColor="@color/Blue"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvpaswod"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="395dp"
        android:gravity="top"
        android:text="@string/paswod"
        android:textColor="#B1AEAE"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/etpaswod"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="30dp"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:hint="@string/passwad"
        android:inputType="" />

    <EditText
        android:id="@+id/etnonitiliza"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="30dp"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/non_itiliza"
        android:inputType="" />

    <TextView
        android:id="@+id/tvnonitiliza"
        android:layout_width="195dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="315dp"
        android:gravity="top"
        android:text="@string/non_itiliza"
        android:textColor="#B1AEAE"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="4dp"
        android:text="Please Sign in to continue."
        android:textColor="#B1AEAE"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="233dp"
        android:layout_height="635dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="283dp"
        android:layout_marginTop="-241dp"
        android:layout_marginEnd="-74dp"
        android:layout_marginBottom="401dp"
        app:srcCompat="@drawable/assest" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="48dp"
        app:srcCompat="@drawable/mesajem_logo_final" />

</RelativeLayout>