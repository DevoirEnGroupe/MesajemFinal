<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MapActivity" >


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp" />


    <Button
        android:id="@+id/btorderpacked"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="122dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#F9A826"
        android:text="CONFIRM PACKED"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone" />


    <Button
        android:id="@+id/btontheway"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="118dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#F9A826"
        android:text="CONFIRM ON THE WAY"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/btproductdeliver"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#F9A826"
        android:text="CONFIRM DELIVERY"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imuserexp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="108dp"
        android:layout_toStartOf="@+id/imuserrec"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imuserrec"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/map"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="44dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvuserexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btproductdeliver"
        android:layout_below="@+id/imuserexp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="11dp"
        />

    <TextView
        android:id="@+id/tvuserrec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imuserrec"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="64dp"
         />


</RelativeLayout>