<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailsActivity"
    android:background="@drawable/background_white">


    <RelativeLayout
        android:id="@+id/FirstRel"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:background="@color/Jaunce_citron">


        <ImageView
            android:id="@+id/detailsPics"
            android:layout_width="228dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="165dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/detailspng" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="129dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="57dp"
            android:text="Track Your Order!"
            android:textColor="@color/Blue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Check Here ..."
            android:textColor="@color/Blue"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SecondRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FirstRel"
        android:layout_marginTop="100dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/checkorder1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/ic_baseline_check_circle_outline_24" />

                <ImageView
                    android:id="@+id/order1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/checkorder1"
                    android:src="@drawable/order1" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/order1"
                    android:text="Order Placed"
                    android:textColor="@color/Blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView14"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/order1"
                    android:text="TextView" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/checkorder2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/ic_baseline_check_circle_outline_24" />

                <ImageView
                    android:id="@+id/order2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/checkorder2"
                    android:src="@drawable/order2" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/order2"
                    android:text="Order Packed"
                    android:textColor="@color/Blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView12"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/order2"
                    android:text="TextView" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <ImageView
                    android:id="@+id/checkorder3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/ic_baseline_check_circle_outline_24" />

                <ImageView
                    android:id="@+id/order3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/checkorder3"
                    android:src="@drawable/order1" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/order3"
                    android:text="On the way"
                    android:textColor="@color/Blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView16"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/order3"
                    android:text="TextView" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <ImageView
                    android:id="@+id/checkorder4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/ic_baseline_check_circle_outline_24" />

                <ImageView
                    android:id="@+id/order4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/checkorder4"
                    android:src="@drawable/order1" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/order4"
                    android:text="Product deliver"
                    android:textColor="@color/Blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView18"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/order4"
                    android:text="TextView" />


            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ThirdRel"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="160dp"
        android:paddingBottom="5dp">


        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="38dp"
            android:elevation="10dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:id="@+id/FourthRel"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/postimdet"
                    android:layout_width="101dp"
                    android:layout_height="92dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="17dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/idpostdet"
                    android:layout_width="67dp"
                    android:layout_height="17dp"

                    android:layout_below="@+id/expdet"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/postimdet"
                    android:gravity="top"
                    android:hint="abf" />

                <TextView
                    android:id="@+id/expdet"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/postimdet"
                    android:hint="edp_jean_je" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>