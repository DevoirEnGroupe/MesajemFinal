<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailsActivity">


    <RelativeLayout
        android:id="@+id/FirstRel"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:background="@color/Jaune">


        <ImageView
            android:id="@+id/detailsPics"
            android:layout_width="228dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="165dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/detailspng" />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="129dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="57dp"
            android:text="Track Your Order!"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:text="Check Here ..."
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SecondRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ThirdRel"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center_vertical"
        android:layout_marginTop="400dp"
        android:background="@color/Orange">


        <ImageView
            android:id="@+id/postimdet"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/idpostdet"
            android:layout_width="68dp"
            android:layout_height="18dp"

            android:gravity="top"
            android:hint="abf" />

        <TextView
            android:id="@+id/expdet"
            android:layout_width="148dp"
            android:layout_height="18dp"

            android:hint="edp_jean_je" />





        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Details on the "
            android:textSize="34sp" />
    </RelativeLayout>

</RelativeLayout>